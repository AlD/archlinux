pkgdesc='KDE-based IRC client (monolithic version)'

package_quassel-git() {
  depends='kdelibs'

  _prepare_build

  pushd "$_builddir" >/dev/null

  msg 'Configuring build options...'
  cmake -DWANT_MONO=ON              \
        -DWANT_CORE=OFF             \
        -DWANT_QTCLIENT=OFF         \
        -DWITH_OPENSSL=ON           \
        -DWITH_KDE=ON               \
        -DWITH_WEBKIT=ON            \
	-DCMAKE_INSTALL_PREFIX=/usr \
	"$_srcdir"

  popd >/dev/null
  _build
}
