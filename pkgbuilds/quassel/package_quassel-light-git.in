pkgdesc='Qt-based IRC client (monolithic version)'

package_quassel-light-git() {
  _prepare_build

  pushd "$_builddir" >/dev/null

  msg 'Configuring build options...'
  cmake -DWANT_MONO=ON              \
        -DWANT_CORE=OFF             \
        -DWANT_QTCLIENT=OFF         \
        -DWITH_OPENSSL=ON           \
        -DWITH_KDE=OFF              \
        -DWITH_WEBKIT=OFF           \
	-DCMAKE_INSTALL_PREFIX=/usr \
	"$_srcdir"

  popd >/dev/null
  _build
}
