_pkgname=quassel
pkgname=quassel-git
pkgver=0.10.pre.6.gcb6d11d
pkgrel=1
pkgdesc="A Qt4 IRC client with a separated core"
url="http://quassel-irc.org"
license=('GPL')
arch=('i686' 'x86_64')
depends=('qt4')
makedepends=('git' 'cmake' 'automoc4')
provides=('quassel')
conflicts=('quassel')
source=('git://git.quassel-irc.org/quassel.git')
md5sums=('SKIP')


pkgver() {
	cd $_pkgname
	git describe --always | sed -e 's|-|.|g'
}

build() {
    cd $srcdir/$_pkgname

    cmake -DCMAKE_INSTALL_PREFIX=/usr .
    make
}

package() {
    cd $srcdir/$_pkgname

    make DESTDIR=$startdir/pkg/ install
}
