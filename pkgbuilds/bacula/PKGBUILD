## PKGBUILD [plain_text]
# Maintainer: Steven Haigh <netwiz@crc.id.au>
# bacula-fd.service by Christian Hesse <arch@eworm.de>

pkgbase='bacula'
pkgname='bacula'
true && pkgname=('bacula-bat' 'bacula-client' 'bacula-common' 'bacula-console' 'bacula-dir' 'bacula-dir-mysql' 'bacula-dir-postgresql' 'bacula-dir-sqlite3' 'bacula-sd')
pkgver=7.0.3
pkgrel=1
arch=(i686 x86_64)
pkgdesc='Bacula - A Network Backup Tool'
url="http://www.bacula.org"
license=('AGPL3')
makedepends=( mariadb postgresql qt4 sqlite3 )
source=("http://downloads.sourceforge.net/sourceforge/bacula/bacula-${pkgver}.tar.gz"
        '00-qmake4.patch'
        'bacula-fd.service'
        'bacula-sd.service'
        'bacula-dir.service')

sha1sums=('93a994b96ede585523a7e9a6713c440becfca447'
          '58a60e8af9b4735c564c7223c2bf0c25803927f3'
          '151c6d8b06d8be029a9a50be4d6e64954c88f48c'
          'a682cd35bf2a85fd7274f4241a91483c53c43f37'
          '35a151cc990ace78165a2e7c3f816b739c01b4cf')

prepare() {
    cd "${srcdir}/bacula-${pkgver}"
    export _instdir="${srcdir}/install"
    patch -Np3 -i ${srcdir}/00-qmake4.patch
}

build() {
    cd "${srcdir}/bacula-${pkgver}"
    ./configure                              \
    --enable-bat                             \
    --enable-smartalloc                      \
    --prefix=/usr                            \
    --sbindir=/usr/bin                       \
    --sysconfdir=/etc/bacula                 \
    --with-mysql                             \
    --with-openssl                           \
    --with-postgresql                        \
    --with-sqlite3                           \
    --with-pid-dir=/run                      \
    --with-scriptdir=/etc/bacula/scripts     \
    --with-systemd=/usr/lib/systemd/system/  \
    --with-working-dir=/opt/bacula/working   \
    --with-logdir=/var/log                   \
    --with-x                                 \
    --with-dir-password="XXX_REPLACE_WITH_DIRECTOR_PASSWORD_XXX" \
    --with-fd-password="XXX_REPLACE_WITH_CLIENT_PASSWORD_XXX" \
    --with-sd-password="XXX_REPLACE_WITH_STORAGE_PASSWORD_XXX" \
    --with-mon-dir-password="XXX_REPLACE_WITH_DIRECTOR_MONITOR_PASSWORD_XXX" \
    --with-mon-fd-password="XXX_REPLACE_WITH_CLIENT_MONITOR_PASSWORD_XXX" \
    --with-mon-sd-password="XXX_REPLACE_WITH_STORAGE_MONITOR_PASSWORD_XXX" \
    --with-basename="XXX_REPLACE_WITH_LOCAL_HOSTNAME_XXX"
    
    make DESTDIR="$_instdir" install

    ## Correct some config files that the compile process 'helpfully' configures for us.
    for conf in bacula-sd.conf bacula-dir.conf bacula-fd.conf bconsole.conf bat.conf; do
      if [ -e "${pkgdir}/etc/bacula/${conf}" ] ; then
        sed -i'' "s#XXX_REPLACE_WITH_LOCAL_HOSTNAME_XXX-dir#XXX_REPLACE_WITH_DIRECTOR_HOSTNAME_XXX-dir#g" ${pkgdir}/etc/bacula/${conf}
      fi
    done
}

package_bacula-bat() {
  pkgdesc='Bacula - A Network Backup Tool (management GUI)'
  backup=('etc/bacula/bat.conf')
  depends=(bacula-common qt4)
  pushd "${_instdir}"

  cp --parents -adf usr/bin/bat ${pkgdir}
  cp --parents -adf etc/bacula/bat.conf ${pkgdir}
  cp --parents -adf usr/share/man/man1/bat.1.gz ${pkgdir}

  chmod 755 ${pkgdir}/etc/bacula ${pkgdir}/usr/bin/bat
  chmod 644 ${pkgdir}/etc/bacula/bat.conf

  mkdir -p ${pkgdir}/usr/share/applications ${pkgdir}/usr/share/pixmaps
  cp -adf ${srcdir}/${pkgbase}-${pkgver}/scripts/bat.desktop ${pkgdir}/usr/share/applications/
  cp -adf ${srcdir}/${pkgbase}-${pkgver}/src/qt-console/images/bat_icon.png ${pkgdir}/usr/share/pixmaps/
}

package_bacula-client() {
  pkgdesc='Bacula - A Network Backup Tool (client)'
  depends=('bacula-common')
  backup=('etc/bacula/bacula-fd.conf')
  pushd "${_instdir}"

  cp --parents -adf etc/bacula/bacula-fd.conf ${pkgdir}
  cp --parents -adf usr/bin/bacula-fd ${pkgdir}
  cp --parents -adf usr/lib/bpipe-fd.so ${pkgdir}
  cp --parents -adf usr/share/man/man8/bacula-fd.8.gz ${pkgdir}

  mkdir -p ${pkgdir}/usr/lib/systemd/system/
  cp -f ${srcdir}/bacula-fd.service ${pkgdir}/usr/lib/systemd/system/
}

package_bacula-common() {
  pkgdesc='Bacula - A Network Backup Tool (common files)'
  pushd "${_instdir}"

  cp --parents -adf etc/bacula/scripts/bacula_config ${pkgdir}
  cp --parents -adf etc/bacula/scripts/btraceback.gdb ${pkgdir}
  cp --parents -adf etc/bacula/scripts/btraceback.dbx ${pkgdir}
  cp --parents -adf etc/bacula/scripts/btraceback.mdb ${pkgdir}
  cp --parents -adf usr/bin/btraceback ${pkgdir}
  cp --parents -adf usr/lib/libbac-${pkgver}.so ${pkgdir}
  cp --parents -adf usr/lib/libbaccfg-${pkgver}.so ${pkgdir}
  cp --parents -adf usr/lib/libbacfind-${pkgver}.so ${pkgdir}
  cp --parents -adf usr/share/man/man8/btraceback.8.gz ${pkgdir}
}

package_bacula-console() {
  pkgdesc='Bacula - A Network Backup Tool (management CLI)'
  backup=('etc/bacula/bconsole.conf')
  depends=('bacula-common')
  pushd "${_instdir}"

  cp --parents -adf usr/bin/bconsole ${pkgdir}
  cp --parents -adf etc/bacula/bconsole.conf ${pkgdir}
  cp --parents -adf usr/share/man/man8/bconsole.8.gz ${pkgdir}

  chmod 755 ${pkgdir}/etc/bacula ${pkgdir}/usr/bin/bconsole
  chmod 644 ${pkgdir}/etc/bacula/bconsole.conf
}

package_bacula-dir() {
  pkgdesc='Bacula - A Network Backup Tool (director daemon)'
  depends=('bacula-common')
  optdepends=(
    'bacula-dir-sqlite3: SQLite support'
    'bacula-dir-mysql: mariadb support'
    'bacula-dir-postgresql: PostgreSQL support')
  backup=('etc/bacula/bacula-dir.conf')
  pushd "${_instdir}"

  cp --parents -adf etc/bacula/bacula-dir.conf ${pkgdir}
  cp --parents -adf etc/bacula/scripts/query.sql ${pkgdir}
  cp --parents -adf etc/bacula/scripts/create_bacula_database ${pkgdir}
  cp --parents -adf etc/bacula/scripts/delete_catalog_backup ${pkgdir}
  cp --parents -adf etc/bacula/scripts/drop_bacula_database ${pkgdir}
  cp --parents -adf etc/bacula/scripts/drop_bacula_tables ${pkgdir}
  cp --parents -adf etc/bacula/scripts/grant_bacula_privileges ${pkgdir}
  cp --parents -adf etc/bacula/scripts/make_bacula_tables ${pkgdir}
  cp --parents -adf etc/bacula/scripts/make_catalog_backup.pl ${pkgdir}
  cp --parents -adf etc/bacula/scripts/update_bacula_tables ${pkgdir}
  cp --parents -adf usr/bin/bacula-dir ${pkgdir}
  cp --parents -adf usr/bin/bregex ${pkgdir}
  cp --parents -adf usr/bin/bsmtp ${pkgdir}
  cp --parents -adf usr/bin/bwild ${pkgdir}
  cp --parents -adf usr/bin/dbcheck ${pkgdir}
  cp --parents -adf usr/share/man/man1/bsmtp.1.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bacula-dir.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bregex.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bwild.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/dbcheck.8.gz ${pkgdir}
  cp --parents -adf usr/lib/libbacsql-${pkgver}.so ${pkgdir}

  mkdir -p ${pkgdir}/usr/lib/systemd/system/
  cp -f ${srcdir}/bacula-dir.service ${pkgdir}/usr/lib/systemd/system/

  ## Logwatch Support
  mkdir -p ${pkgdir}/etc/logwatch/scripts/services/ ${pkgdir}/etc/logwatch/scripts/shared/
  mkdir -p ${pkgdir}/etc/logwatch/conf/logfiles/ ${pkgdir}/etc/logwatch/conf/services/
  cp -adf ${srcdir}/bacula-${pkgver}/scripts/logwatch/bacula ${pkgdir}/etc/logwatch/scripts/services/
  cp -adf ${srcdir}/bacula-${pkgver}/scripts/logwatch/applybaculadate ${pkgdir}/etc/logwatch/scripts/shared/
  cp -adf ${srcdir}/bacula-${pkgver}/scripts/logwatch/logfile.bacula.conf ${pkgdir}/etc/logwatch/conf/logfiles/bacula.conf
  cp -adf ${srcdir}/bacula-${pkgver}/scripts/logwatch/services.bacula.conf ${pkgdir}/etc/logwatch/conf/services/bacula.conf

  ## Logrotate Support
  mkdir -p ${pkgdir}/etc/logrotate.d/
  cp -adf ${srcdir}/bacula-${pkgver}/scripts/logrotate ${pkgdir}/etc/logrotate.d/bacula
}

package_bacula-dir-mysql() {
  pkgdesc='Bacula - A Network Backup Tool (director daemon - mysql support)'
  depends=('bacula-dir' 'mariadb')
  pushd "${_instdir}"
  
  cp --parents -adf usr/lib/libbaccats-mysql-${pkgver}.so ${pkgdir}
  cp --parents -adf usr/lib/libbaccats-mysql.so ${pkgdir}
  cp -d usr/lib/libbaccats-mysql.so ${pkgdir}/usr/lib/libbaccats-7.0.3.so
  for file in etc/bacula/scripts/*mysql*; do
    cp --parents -adf "$file" "${pkgdir}"
  done
}

package_bacula-dir-postgresql() {
  pkgdesc='Bacula - A Network Backup Tool (director daemon - postgresql support)'
  depends=('bacula-dir' 'postgresql')
  pushd "${_instdir}"

  cp --parents -adf usr/lib/libbaccats-postgresql-${pkgver}.so ${pkgdir}
  cp --parents -adf usr/lib/libbaccats-postgresql.so ${pkgdir}
  cp -d usr/lib/libbaccats-postgresql.so ${pkgdir}/usr/lib/libbaccats-7.0.3.so
  for file in etc/bacula/scripts/*postgresql*; do
    cp --parents -adf "$file" "${pkgdir}"
  done
}

package_bacula-dir-sqlite3() {
  pkgdesc='Bacula - A Network Backup Tool (director daemon - sqlite3 support)'
  depends=('bacula-dir' 'sqlite3')
  pushd "${_instdir}"

  cp --parents -adf usr/lib/libbaccats-sqlite3-${pkgver}.so ${pkgdir}
  cp --parents -adf usr/lib/libbaccats-sqlite3.so ${pkgdir}
  cp -d usr/lib/libbaccats-sqlite3.so ${pkgdir}/usr/lib/libbaccats-7.0.3.so
  for file in etc/bacula/scripts/*sqlite3*; do
    cp --parents -adf "$file" "${pkgdir}"
  done
}

package_bacula-sd() {
  pkgdesc='Bacula - A Network Backup Tool (storage daemon)'
  backup=('etc/bacula/bacula-sd.conf')
  depends=('bacula-common')
  pushd "${_instdir}"

  cp --parents -adf etc/bacula/bacula-sd.conf ${pkgdir}
  cp --parents -adf usr/bin/bacula-sd ${pkgdir}
  cp --parents -adf usr/bin/bextract ${pkgdir}
  cp --parents -adf usr/bin/bls ${pkgdir}
  cp --parents -adf usr/bin/bcopy ${pkgdir}
  cp --parents -adf usr/bin/bscan ${pkgdir}
  cp --parents -adf usr/bin/btape ${pkgdir}
  cp --parents -adf usr/share/man/man8/bacula-sd.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bextract.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bls.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bcopy.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/bscan.8.gz ${pkgdir}
  cp --parents -adf usr/share/man/man8/btape.8.gz ${pkgdir}

  mkdir -p ${pkgdir}/usr/lib/systemd/system/
  cp -f ${srcdir}/bacula-sd.service ${pkgdir}/usr/lib/systemd/system/
}
